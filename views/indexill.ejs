<%- include("partials/header.ejs") %>
<div class="jumbotron">
	<h1 class="text-center display-3">
		Share to Heal
	</h1>	
</div>
<div class="container" id="head">
	<div class="row">
		
		<% posts.forEach(function(post){ %>
		<% if(post.image=="https://images.unsplash.com/flagged/photo-1578535689084-b804a326a840?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=675&q=80") { %>
		<div class="col-lg-6">
			
                <div class="card mb-5">
					<div>
						<img class="card-img-top" src=" <%=post.image %>">
					</div>
					<div class="content">
						<h1>
		                        <%= post.title%>
						</h1>
					
						<div class="meta">
							 <span><%=post.created.toDateString() %></span>
						</div>
						<div class="description">
							<p>
		              <%= post.description.substring(0,100)%>...<!--used for restricting text-->
	               </p>
						</div>
						<div class="extra">
							<div class="ui left labeled button" tabindex="0">
							<a class="ui basic right pointing label" href="/posts/<%=post._id%>">Read
							</a>
							<a class="ui red inverted button"  href="/posts/<%=post._id%>">
                                <i class="newspaper icon"></i> Post
                            </a>
							</div>
						</div>
					</div>
	               
	             
                 </div>

		  </div>
		<% }; %>
		<% });%>
	</div>
</div>

<%- include("partials/footer.ejs") %>